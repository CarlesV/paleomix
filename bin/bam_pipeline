import os
import sys


def _has_required_modules():
    if (sys.version_info.major != 2) or (sys.version_info.minor != 7):
        sys.stderr.write("ERROR: Python version 2.7.x required!\n")
        sys.stderr.write("       Current version is v%s\n\n" % (sys.version.replace("\n", " "),))
        return False

    try:
        from pypeline.requirements import check_pypeline_requirements
    except ImportError:
        error = sys.exc_info()[1]
        sys.stderr.write("ERROR: Could not import required Pypeline module pypeline.requirements:\n\t- %s\n\n" % (error,))
        sys.stderr.write("       Please make sure that PYTHONPATH points to the location of the 'pypeline' module.\n")
        sys.stderr.write("       This may be done permanently by adding the following to your ~/.bashrc file:\n")
        sys.stderr.write("         export PYTHONPATH=${PYTHONPATH}:/path/to/pypeline/checkout/...\n\n")
        return False

    return check_pypeline_requirements()


def _print_usage():
    import pypeline
    from pypeline.common.console import print_info

    basename = os.path.basename(sys.argv[0])
    print_info("BAM Pipeline %s\n" % (pypeline.__version__,))
    print_info("Usage:")
    print_info("  -- %s help            -- Display this message" % basename)
    print_info("  -- %s mkfile [...]    -- Generate makefile from 'SampleSheet.csv' files." % basename)
    print_info("  -- %s dryrun [...]    -- Perform dry run of pipeline on provided makefiles." % basename)
    print_info("     %s                    Equivalent to 'bam_pipeline run --dry-run [...]'." % (" " * len(basename),))
    print_info("  -- %s run [...]       -- Run pipeline on provided makefiles." % basename)


def main(argv):
    if not _has_required_modules():
        return 1

    import pypeline.common.system
    pypeline.common.system.set_procname()

    import pypeline.tools.bam_pipeline.config as bam_config
    from pypeline.common.console import print_err

    try:
        config, args = bam_config.parse_config(argv)
        if args and args[0].startswith("dry"):
            config.dry_run = True
    except bam_config.ConfigError, error:
        print_err(error)
        return 1

    if (len(args) == 0) or (args[0] not in ("mkfile", "run", "dry_run", "dryrun")):
        _print_usage()
    elif args[0] == "mkfile":
        import pypeline.tools.bam_pipeline.mkfile

        return pypeline.tools.bam_pipeline.mkfile.main(args[1:])
    elif not args[1:]:
        _print_usage()
        print_err("\nPlease specify at least one makefile!")
    else:
        import pypeline.tools.bam_pipeline.pipeline as bam_pipeline

        return bam_pipeline.main(config, args[1:])

    return 1


if __name__ == "__main__":
    sys.exit(main(sys.argv[1:]))
